<div class="row justify-content-center">
  <div class="col-md-12 col-lg-10">
    <div class="mystical-card">
      <div class="card-header-mystical text-center py-4">
        <h1 class="mb-2">
          <i class="fas fa-scroll"></i> Reading History <i class="fas fa-history"></i>
        </h1>
        <p class="mb-0 opacity-75">Your Journey Through the Cosmic Records</p>
      </div>
      
      <div class="card-body p-4">
        <% if @readings.any? %>
          <div class="row">
            <% @readings.each do |reading| %>
              <div class="col-md-6 col-lg-4 mb-4">
                <div class="mystical-card">
                  <div class="card-body">
                    <div class="text-center mb-3">
                      <div class="flames-result" style="font-size: 2rem;">
                        <%= reading.result %>
                      </div>
                      <h6 style="color: var(--accent-gold);">
                        <%= reading.formatted_result %>
                      </h6>
                    </div>
                    
                    <div class="text-center">
                      <p class="mb-1">
                        <strong style="color: var(--accent-purple);"><%= reading.person1_name.titleize %></strong>
                      </p>
                      <p class="mb-1">
                        <i class="fas fa-heart" style="color: var(--accent-pink);"></i>
                      </p>
                      <p class="mb-3">
                        <strong style="color: var(--accent-blue);"><%= reading.person2_name.titleize %></strong>
                      </p>
                      
                      <small class="text-muted">
                        <i class="fas fa-calendar"></i> <%= reading.created_at.strftime("%B %d, %Y") %>
                      </small>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="fas fa-scroll" style="font-size: 3rem; color: var(--accent-purple); opacity: 0.5;"></i>
            <h4 class="mt-3" style="color: var(--text-gold);">No readings yet...</h4>
            <p class="text-muted">Your cosmic journey awaits! Start by getting your first reading.</p>
            <%= link_to "Get Reading", root_path, class: "btn btn-mystical mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>