<h4 class="text-center mb-3 flames-result">Update Profile</h4>

<div class="d-flex justify-content-center">
  <div class="mystical-card p-3" style="max-width: 460px; width: 100%;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label small mb-1" %>
        <%= f.email_field :email, class: "form-control-mystical form-control-sm", autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div class="mb-3 text-warning small">
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :password, class: "form-label small mb-1" %>
        <small class="d-block text-muted mb-1">(leave blank if you don't want to change it)</small>
        <%= f.password_field :password, class: "form-control-mystical form-control-sm", autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <small class="text-muted"><%= @minimum_password_length %> characters minimum</small>
        <% end %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label small mb-1" %>
        <%= f.password_field :password_confirmation, class: "form-control-mystical form-control-sm", autocomplete: "new-password" %>
      </div>

      <div class="mb-3">
        <%= f.label :current_password, class: "form-label small mb-1" %>
        <small class="d-block text-muted mb-1">(we need your current password to confirm your changes)</small>
        <%= f.password_field :current_password, class: "form-control-mystical form-control-sm", autocomplete: "current-password" %>
      </div>

      <div class="d-grid mb-3">
        <%= f.submit "Update", class: "btn btn-mystical btn-sm" %>
      </div>
    <% end %>

    <hr>


    <%= link_to "← Back", root_path, class: "text-light small" %>
  </div>
</div>
