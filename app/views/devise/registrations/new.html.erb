<h4 class="text-center mb-3 flames-result">Join Nebulaâ€™s Realm</h4>

<div class="d-flex justify-content-center">
  <div class="mystical-card p-3" style="max-width: 420px; width: 100%;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label small mb-1" %>
        <%= f.email_field :email, class: "form-control-mystical form-control-sm", autofocus: true, autocomplete: "email" %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: "form-label small mb-1" %>
        <% if @minimum_password_length %>
          <small class="d-block text-muted mb-1">(<%= @minimum_password_length %> characters minimum)</small>
        <% end %>
        <%= f.password_field :password, class: "form-control-mystical form-control-sm", autocomplete: "new-password" %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: "form-label small mb-1" %>
        <%= f.password_field :password_confirmation, class: "form-control-mystical form-control-sm", autocomplete: "new-password" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Sign up", class: "btn btn-mystical btn-sm" %>
      </div>
    <% end %>

    <div class="mt-2 text-center small">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
