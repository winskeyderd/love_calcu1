<div class="row justify-content-center">
  <div class="col-md-10 col-lg-8">
    <div class="mystical-card">
      <div class="card-header-mystical text-center py-4">
        <h1 class="mb-2">
          <i class="fas fa-trophy"></i> Cosmic Popularity Rankings <i class="fas fa-star"></i>
        </h1>
        <p class="mb-0 opacity-75">Most Sought After Souls in the Universe</p>
      </div>
      
      <div class="card-body p-4">
        <% if @top_names.any? %>
          <div class="row">
            <% @top_names.each_with_index do |name_search, index| %>
              <div class="col-12 mb-3">
                <div class="leaderboard-item d-flex align-items-center">
                  <div class="rank-badge me-3">
                    <%= index + 1 %>
                  </div>
                  
                  <div class="flex-grow-1">
                    <h5 class="mb-1" style="color: var(--accent-gold); font-family: 'Cinzel', serif;">
                      <%= name_search.full_name %>
                    </h5>
                    <p class="mb-0 text-muted">
                      <i class="fas fa-search"></i> Searched <%= pluralize(name_search.search_count, 'time') %>
                    </p>
                  </div>
                  
                  <div class="text-end">
                    <% if index == 0 %>
                      <i class="fas fa-crown" style="color: var(--accent-gold); font-size: 1.5rem;"></i>
                    <% elsif index == 1 %>
                      <i class="fas fa-medal" style="color: silver; font-size: 1.3rem;"></i>
                    <% elsif index == 2 %>
                      <i class="fas fa-medal" style="color: #cd7f32; font-size: 1.1rem;"></i>
                    <% else %>
                      <i class="fas fa-star" style="color: var(--accent-purple);"></i>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-5">
            <i class="fas fa-crystal-ball" style="font-size: 3rem; color: var(--accent-purple); opacity: 0.5;"></i>
            <h4 class="mt-3" style="color: var(--text-gold);">The cosmos awaits...</h4>
            <p class="text-muted">No souls have been read yet. Be the first to discover your destiny!</p>
            <%= link_to "Start Reading", root_path, class: "btn btn-mystical mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="text-center mt-4">
      <%= link_to "ðŸ”® Get Your Reading", root_path, class: "btn btn-mystical btn-lg" %>
    </div>
  </div>
</div>